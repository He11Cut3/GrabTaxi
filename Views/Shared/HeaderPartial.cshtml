 <!-- Header start -->
<header class="header">
    <div class="top-bar">
        <div class="container">
            <button id="phone-trigger" class="phone-trigger ion-android-call"></button>
            <ul class="phones">
                <li><a href="tel:8-915-246-14-35">8-915-246-14-35</a></li>
            </ul>
        </div>
    </div>
    <div id="nav-bar" class="nav-bar">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" class="logo"><img src="~/images/logo.svg" alt="Taxi Grabber" /></a>
            <button id="nav-trigger" class="nav-trigger ion-android-menu"></button>
            <nav class="main-nav">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Главная страница</a></li>
                    <li><a asp-controller="Order" asp-action="Create">Заказ такси</a></li>
                    <li><a asp-controller="Home" asp-action="About">О нас</a></li>
                    <li><a asp-controller="Home" asp-action="Driver">Водители</a></li>
                    <li><a asp-controller="Home" asp-action="Cars">Премиум авто</a></li>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li><a>@User.Identity.Name</a>
                            
                            <ul>
                                <li><a asp-controller="Order" asp-action="Details">История заказов</a></li>
                                <li><a asp-controller="Account" asp-action="Logout">Выход</a></li>
                            </ul>
                        
                        </li>
                        
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Create">Регистрация</a></li>
                        <li><a asp-controller="Account" asp-action="Login">Вход</a></li>
                    }
                    
                </ul>
            </nav>
        </div>
    </div>

    <svg height="20" width="2560" class="pattern">
        <defs>
            <pattern id="header-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <rect width="10" height="10" />
                <rect x="10" y="10" width="10" height="10" />
            </pattern>
            <mask id="header-mask" x="0" y="0" width="2560" height="20">
                <rect x="0" y="0" width="2560" height="20" />
            </mask>
        </defs>
        <rect x="0" y="0" width="2560" height="20" id="header-image" />
    </svg>

</header>
<!-- Header end -->