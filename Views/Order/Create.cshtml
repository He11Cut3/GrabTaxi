@model Order

<!-- Booking start -->
<section class="booking">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="title">
					<h2>Закажи такси онлайн</h2>
					<h6>Сохранение денег и времени</h6>
				</div>
			</div>
		</div>
        <form asp-controller="Order" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CarType" class="control-label">Тип автомобиля</label>
                <select asp-for="CarType" class="form-control">
                    <option value="Эконом">Эконом</option>
                    <option value="Эконом ПЛЮС">Эконом ПЛЮС</option>
                    <option value="Фургон">Фургон</option>
                    <option value="Минивэн">Минивэн</option>
                    <option value="Внедорожник">Внедорожник</option>
                    <option value="Лимузин">Лимузин</option>
                </select>
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">ФИО</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Почта</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label">Номер телефона (с +7)</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="From" class="control-label">Начало маршрута</label>
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="To" class="control-label">Конец маршрута</label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control datepicker" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label">Время</label>
                <input asp-for="Time" class="form-control timepicker" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfCars" class="control-label">Кол-во машин</label>
                <select asp-for="NumberOfCars" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
                <span asp-validation-for="NumberOfCars" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfPassengers" class="control-label">Пассажиров</label>
                <select asp-for="NumberOfPassengers" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>

                    <!-- Добавьте остальные варианты -->
                </select>
                <span asp-validation-for="NumberOfPassengers" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="control-label">Сообщение</label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Добавить заказ</button>
            </div>
        </form>
	</div>
</section>